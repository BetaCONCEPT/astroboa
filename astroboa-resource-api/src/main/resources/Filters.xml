<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  	<!-- Filter required to serve binary channel content. -->
	<bean id="binaryChannelLoaderFilter" class="org.betaconceptframework.astroboa.resourceapi.filter.BinaryChannelLoaderFilter">
	 	<property name="repositoryService" ref="repositoryService"/>
	</bean>
	
	<!-- Filter required to serve content object type definition schemas. -->
	<bean id="contentObjectTypeDefinitionSchemaFilter" class="org.betaconceptframework.astroboa.resourceapi.filter.CmsDefinitionFilter">
	 	<property name="repositoryService" ref="repositoryService"/>
	 	<property name="definitionService" ref="definitionService"/>
	</bean>
</beans>
